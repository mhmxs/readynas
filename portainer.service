[Unit]
Description=Portainer service
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
Restart=always
User=readynas
ExecStart=/usr/bin/docker run --rm --name %n -p 9443:9443 -v /var/run/docker.sock:/var/run/docker.sock -v /var/lib/portainer:/data portainer/portainer-ce:2.9.3
ExecStop=/usr/bin/docker stop %n
ExecStopPost=/usr/bin/docker rm %n

[Install]
WantedBy=multi-user.target
